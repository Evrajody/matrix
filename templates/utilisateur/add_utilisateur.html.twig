{% extends "base.html.twig" %}

{% block title %}
	Matrix - Add - Utilisateurs
{% endblock %}

{% block stylesheets %}
	<link rel="stylesheet" href="{{asset('assets/css/dataTables.bootstrap4.min.css') }}">
	<link rel="stylesheet" href="{{asset('assets/css/utilisateur.css') }}">
{% endblock %}


{% block cental_content %}

	<!-- Content Wrapper. Contains page content -->
	<div
		class="content-wrapper">
		<!-- Content Header (Page header) -->
		<div class="content-header">
			<div class="container-fluid">
				<div class="row mb-2">
					<div class="col-sm-6">
						<h1 class="m-0">Utilisateurs</h1>
					</div>
					<!-- /.col -->
					<div class="col-sm-6">
						<ol class="breadcrumb float-sm-right">
							<li class="breadcrumb-item">
								<a href="#">Dashboard</a>
							</li>
							<li class="breadcrumb-item active">Utilisateurs</li>
							<li class="breadcrumb-item active">Nouvel utilsateur</li>
						</ol>
					</div>
					<!-- /.col -->
				</div>
				<!-- /.row -->
			</div>
			<!-- /.container-fluid -->
		</div>
		<!-- /.content-header -->

		<!-- Main content -->
		<section class="content">

			<div class="container-fluid">

				<div class="container-fluid">
					<div
						class="row">
						<!-- left column -->
						<div class="col">
							<!-- general form elements -->
							<div class="card card-primary">
								<div class="card-header">
									<h3 class="card-title">
										Informations sur l'utilisateur
									</h3>
								</div>

								<form action="">
									<div class="row">
										<div class="col-md-6">
											<div class="card-body">
												<div class="form-group">
													<label for="exampleInputEmail1">Nom</label>
													<input type="text" class="form-control" id="exampleInputEmail1" placeholder="Nom de l'utilisateur">
												</div>
												<div class="form-group">
													<label for="exampleInputFile">Email</label>
													<input type="email" class="form-control" id="exampleInputPassword1" placeholder="Email">
												</div>
												<div class="form-group">
													<label for="exampleInputFile">Sexe</label>
													<input type="tel" class="form-control" id="exampleInputPassword1" placeholder="Telephone">
												</div>

												<div class="form-group">
													<label for="exampleInputFile">Date de naissance</label>
													<input type="tel" class="form-control" id="exampleInputPassword1" placeholder="Telephone">
												</div>
											</div>
										</div>

										<div class="col-md-6">
											<div class="card-body">
												<div class="form-group">
													<label for="exampleInputPassword1">Prenom</label>
													<input type="text" class="form-control" id="exampleInputPassword1" placeholder="Prenom de l'utilisateur">
												</div>
												<div class="form-group">
													<label for="exampleInputFile">Telephone</label>
													<input type="tel" class="form-control" id="exampleInputPassword1" placeholder="Telephone">
												</div>
												<div class="form-group">
													<label for="exampleInputFile">Adresse</label>
													<input type="address" class="form-control" id="exampleInputPassword1" placeholder="Adresse">
												</div>
												<label for="exampleInputFile">Photo</label>
												<div class="custom-file">
													<input type="file" class="custom-file-input" id="customFile">
													<label class="custom-file-label" for="customFile">Choisir un fichier</label>
												</div>
											</div>
										</div>
									</div>

									<div class="card-footer text-right">
										<input type="submit" class="btn btn-primary" value="Enregistrer">
									</div>
								</form>


							</div>
							<!-- /.card -->


						</div>


					</div>
					<!-- /.row -->


				</div>

			</section>
			<!-- /.content -->

		</div>
		<!-- /.content-wrapper -->


		{% block javascripts %}

		    <script src=" {{asset('assets/js/custom_input.min.js')}} "></script>

			<script>
				$(function () {
					bsCustomFileInput.init();
				});
	    	</script>
		
		
		{% endblock %}


	{% endblock %}
