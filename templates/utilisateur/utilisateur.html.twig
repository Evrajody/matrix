{% extends "base.html.twig" %}

{% block title %}
	Matrix - Utilisateurs
{% endblock %}


{% block cental_content %}

	<!-- Content Wrapper. Contains page content -->
	<div
		class="content-wrapper">
		<!-- Content Header (Page header) -->
		<div class="content-header">
			<div class="container-fluid">
				<div class="row mb-2">
					<div class="col-sm-6">
						<h1 class="m-0">Utilisateurs</h1>
					</div>
					<!-- /.col -->
					<div class="col-sm-6">
						<ol class="breadcrumb float-sm-right">
							<li class="breadcrumb-item">
								<a href="#">Home</a>
							</li>
							<li class="breadcrumb-item active">Dashboard v1</li>
						</ol>
					</div>
					<!-- /.col -->
				</div>
				<!-- /.row -->
			</div>
			<!-- /.container-fluid -->
		</div>
		<!-- /.content-header -->


		<!-- Main content -->
		<section class="content">

			<div class="container-fluid">

				<div class="row">

					<div class="col-12">
						<div class="card">
							<div class="card-header text-right">
								<a href="" class="btn btn-primary">   <i class="fa fa-plus" aria-hidden="true"></i> Nouvel utilisateur</a>
							</div>

							<div class="card-body">
								<table id="example2" class="table table-bordered table-hover">
									<thead>
										<tr>
											<th>Nom utilisateur</th>
											<th>Prenom utilisateur</th>
											<th>Telephones</th>
											<th>Adresse</th>
											<th>Actions</th>
										</tr>
									</thead>
									<tbody>

									{% for user in allUsers %}
									 
										<tr>
											<td>  {{ user.nomUtilisateur }} </td>
											<td>{{ user.prenomUtilisateur }} </td>
											<td>{{ user.phoneUtilisateur }} </td>
											<td> {{ user.emailUtilisateur }} </td>
											<td> 
											   
											</td>
										</tr>

										{% else %}
								 
										<tr>
											<td colspan="5" class="text-center"> Pas d'utilisateur pour le moment </td>
										</tr>

									{% endfor %}

									</tbody>
								</table>
							</div>
							<!-- /.card-body -->
						</div>
					</div>

				</div>

			</div>

		</section>
		<!-- /.content -->

	</div>
	<!-- /.content-wrapper -->


{% endblock %}

