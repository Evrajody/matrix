{% extends "base.html.twig" %}

{% block title %}
	Matrix - Add - Utilisateurs
{% endblock %}

{% block stylesheets %}
	<link rel="stylesheet" href="{{asset('assets/css/dataTables.bootstrap4.min.css') }}">
	<link rel="stylesheet" href="{{asset('assets/css/utilisateur.css') }}">
    <link  rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap-grid.min.css" />


{% endblock %}


{% block cental_content %}

	<!-- Content Wrapper. Contains page content -->
	<div class="content-wrapper">

		<!-- Content Header (Page header) -->
		<div class="content-header">
			<div class="container-fluid">
				<div class="row mb-2">
					<div class="col-sm-6">
						<h1 class="m-0">Profile</h1>
					</div>
					<!-- /.col -->
					<div class="col-sm-6">
						<ol class="breadcrumb float-sm-right">
							<li class="breadcrumb-item">
								<a href="#">Dashboard</a>
							</li>
							<li class="breadcrumb-item active">Utilisateurs</li>
							<li class="breadcrumb-item active">Profiler</li>
						</ol>
					</div>
					<!-- /.col -->
				</div>
				<!-- /.row -->
			</div>
			<!-- /.container-fluid -->
		</div>
		<!-- /.content-header -->

		<!-- Main content -->
		<section class="content">

			<div class="container-fluid">

				<div class="row">
					<div class="col-md-3">

						<!-- Profile Image -->
						<div class="card card-primary card-outline">
							<div class="card-body box-profile">
								<div class="text-center">
									<img class="profile-user-img img-fluid img-circle" src="{{asset('images/user4-128x128.jpg') }} " alt="User profile picture">
								</div>

								<h3 class="profile-username text-center"> {{ user.getNomUtilisateur() }} {{ user.getPrenomUtilisateur() }} </h3>

								<p class="text-muted text-center"> {{ user.getEmailUtilisateur() }} </p>

								<ul class="list-group list-group-unbordered mb-3">
									<li class="list-group-item">
										<b>Nom</b>
										<a class="float-right">{{ user.getNomUtilisateur() }}</a>
									</li>
									<li class="list-group-item">
										<b>Prenom</b>
										<a class="float-right">{{ user.getPrenomUtilisateur() }}</a>
									</li>

									<li class="list-group-item">
										<b>Email</b>
										<a class="float-right">{{ user.getEmailUtilisateur() }}</a>
									</li>

									<li class="list-group-item">
										<b>Né le
										</b>
										<a class="float-right">{{ user.DateNaissance() | date("m/d/Y") }}</a>
									</li>

									<li class="list-group-item">
										<b>Telephone
										</b>
										<a class="float-right">{{ user.getPhoneUtilisateur() }}</a>
									</li>

									<li class="list-group-item">
										Adresse
										<a class="float-right">{{ user.getAdresseUtilisateur() }}</a>
									</li>

								</ul>

								<a href=" {{ path('edit_utilisateur', {'id': user.id} )  }} " class="btn btn-primary btn-block">
									<b>
										<i class="fa fa-pencil" aria-hidden="true"></i>
										Modifier l'utilisateur</b>
								</a>
							</div>
							<!-- /.card-body -->
						</div>
						<!-- /.card -->
					</div>
					<!-- /.col -->
					<div class="col-md-9">
						<div class="card">
							<div class="card-header p-2">
								<ul class="nav nav-pills">
									<li class="nav-item">
										<a class="nav-link active" href="#activity" data-toggle="tab">Equipements Affectés</a>
									</li>
								</ul>
							</div>
							<!-- /.card-header -->
							<div class="card-body">
								<div class="tab-content grid">
									<div class="active tab-pane" id="activity">
                                    <div class="row">
                                    {% for userAffection in user.getAffections %}
                                       <div class="col-md-4 mb-2">
											<div class="card">
												<div class="card-body">
													<h5 class="card-title">Card title</h5>
													<p class="card-text">This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
												</div>
												<div class="card-footer">
                                                <div class="footer-content d-flex justify-content-between align-self-center">
                                                	 <small class="text-muted">Affectés il y a 3j </small>
                                                   <div class="dropdown">
														<a class="btn-sm btn-secondary " type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
															<i class="fa fa-ellipsis-h" aria-hidden="true"></i>
														</a>
														<ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
															<li><a class="dropdown-item" href="#"> Retirer   </a></li>
															<li><hr class="dropdown-divider"></li>
															<li><a class="dropdown-item" href="#"> Details </a></li>
														</ul>
													</div>
                                                </div>

												</div>
											</div>
										</div>

										{% else %}

										<div class="col-12 text-center">
										Pas d'equipement affecte a cet utilisateur pour le moment
										</div>



                                    {% endfor %}

                                  </div>

									</div>

                                    {# PLACER UNE SECTION ICI #}

								</div>
								<!-- /.tab-content -->
							</div>
							<!-- /.card-body -->
						</div>
						<!-- /.card -->
					</div>
					<!-- /.col -->
				</div>


			</div>

		</section>

		<!-- /.content -->
	</div>
	<!-- /.content-wrapper -->


	{% block javascripts %}{% endblock %}


{% endblock %}
